{
  "name": "vscode-as",
  "displayName": "vscode-as",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "activationEvents": [
    "onLanguage:assemblyscript"
  ],
  "main": "./out/extension.js",

  "contributes": {
    "configuration": {
      "type": "object",
      "title": "VSCode AssemblyScript Configuration",
      "properties": {
        "vscode-as.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "vscode-as.traceLevel": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "on",
          "description": "Traces the communication between VSCode and the assemblyScriptLanguageServer service."
        }
      }
    },
    
    "languages": [
      {
        "id": "assemblyscript",
        "aliases": [
          "AssemblyScript",
          "assemblyscript"
        ],
        "extensions": [
          ".asc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],

    "grammars": [
      {
        "language": "assemblyscript",
        "scopeName": "source.asc",
        "path": "./syntaxes/assemblyscript.json"
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.45.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "vscode-languageclient": "^6.1.3"
  }
}
